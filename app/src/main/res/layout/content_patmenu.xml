<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Patmenu"
    tools:showIn="@layout/app_bar_patmenu">

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyle"
        android:layout_gravity="end"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/fc2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/fc1" />


    <Button
        android:id="@+id/maknyus"
        android:layout_width="168dp"
        android:layout_height="130dp"
        android:layout_below="@id/fc2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/transbutton"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/welew"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        android:textColor="#FFFF"
        android:textSize="18sp"
        android:text="SEHAT"
        android:textStyle="italic"
        android:background="@drawable/batenku"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignBottom="@id/maknyus"
        />

    <ImageView
        android:id="@+id/sehat"
        android:layout_width="139dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="38dp"
        android:src="@drawable/makanlaut"
        android:layout_below="@id/fc2"/>

    <Button
        android:id="@+id/mantul"
        android:layout_width="178dp"
        android:layout_height="130dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="@drawable/transbutton"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@id/fc2"
        android:layout_toRightOf="@id/maknyus"
        />

    <ImageView
        android:id="@+id/cepatsaji"
        android:layout_width="139dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="38dp"
        android:src="@drawable/cepatsaji"
        android:layout_below="@id/fc2"
        android:layout_toRightOf="@id/maknyus"/>

    <Button
        android:id="@+id/sajicepat"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="20dp"
        android:textColor="#FFFF"
        android:textSize="15sp"
        android:text="Cepat Saji"
        android:textStyle="italic"
        android:background="@drawable/batenku"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignBottom="@id/mantul"
        android:layout_toRightOf="@id/welew"
        />

    <Button
        android:id="@+id/edanse"
        android:layout_width="168dp"
        android:layout_height="130dp"
        android:layout_below="@id/maknyus"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/transbutton"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="italic" />
    <ImageView
        android:id="@+id/jus"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="29dp"
        android:src="@drawable/jus"
        android:layout_below="@id/maknyus" />

    <ImageView
        android:id="@+id/air"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/air"
        android:layout_below="@id/mantul"
        android:layout_toRightOf="@id/jus"/>

    <ImageView
        android:id="@+id/kopi"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/kopi"
        android:layout_below="@id/mantul"
        android:layout_toRightOf="@id/air"/>

    <Button
        android:id="@+id/apaan"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        android:textColor="#FFFF"
        android:textSize="16sp"
        android:text="MINUMAN"
        android:textStyle="italic"
        android:background="@drawable/batenku"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignBottom="@id/edanse"
        />

    <Button
        android:id="@+id/pusiang"
        android:layout_width="178dp"
        android:layout_height="130dp"
        android:layout_below="@id/mantul"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/edanse"
        android:background="@drawable/transbutton"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/brownies"
        android:layout_width="79dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="38dp"
        android:src="@drawable/brownies"
        android:layout_below="@id/mantul"
        android:layout_toRightOf="@id/kopi"/>

    <ImageView
        android:id="@+id/popcorn"
        android:layout_width="78dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:paddingRight="5dp"
        android:src="@drawable/popcorn"
        android:layout_below="@id/mantul"
        android:layout_toRightOf="@id/brownies"/>

    <Button
        android:id="@+id/camilan"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="20dp"
        android:textColor="#FFFF"
        android:textSize="16sp"
        android:text="CAMILAN"
        android:textStyle="italic"
        android:background="@drawable/batenku"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignBottom="@id/pusiang"
        android:layout_toRightOf="@id/apaan"
        />
</RelativeLayout>