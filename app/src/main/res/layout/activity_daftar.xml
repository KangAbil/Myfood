<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#540202"
    tools:context=".Daftar">

    <ProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyle"
        android:layout_gravity="end"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/login2"
        android:layout_width="165dp"
        android:layout_height="110dp"
        android:layout_marginTop="59dp"
        android:src="@drawable/makananku"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/txt2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login2"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:text="Makananku"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/email2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:background="#11000000"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_below="@id/txt2"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"/>
    <EditText
        android:id="@+id/nama2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="38dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:background="#11000000"
        android:hint="Nama"
        android:inputType="textPersonName"
        android:layout_below="@id/email2"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"/>

    <EditText
        android:id="@+id/katasandi2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/nama2"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="46dp"
        android:layout_marginRight="45dp"
        android:background="#11000000"
        android:hint="Kata Sandi"
        android:inputType="textPassword"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/ulangkatasandi2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="38dp"
        android:textSize="20dp"
        android:background="#11000000"
        android:hint="Ulangi Kata Sandi"
        android:inputType="textPassword"
        android:layout_below="@id/katasandi2"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"/>

    <Button
        android:id="@+id/daftar2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="55dp"
        android:text="DAFTAR"
        android:layout_marginLeft="135dp"
        android:layout_marginRight="135dp"
        android:layout_below="@id/ulangkatasandi2"
        android:textStyle="bold"
        android:textSize="16dp"
        android:background="#652525"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/sudakun2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/daftar2"
        android:textColor="#FFFFFF"
        android:textSize="11dp"
        android:layout_centerHorizontal="true"
        android:text="Sudah Punya Akun?"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/masuksin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sudakun2"
        android:textColor="#FFAA00"
        android:textSize="11dp"
        android:layout_centerHorizontal="true"
        android:text="Masuk Disini"
        android:textStyle="italic"/>
</RelativeLayout>