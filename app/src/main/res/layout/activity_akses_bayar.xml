<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#540202"
    tools:context=".AksesBayar">
    
    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyle"
        android:layout_gravity="end"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/login1"
        android:layout_width="165dp"
        android:layout_height="110dp"
        android:layout_marginTop="59dp"
        android:src="@drawable/makananku"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login1"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:text="Makananku"
        android:textStyle="italic"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:layout_marginTop="45pt"
        android:textColor="#070000"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:textSize="30dp"
        android:textStyle="italic"
        android:text="@string/endingbutton"
        android:background="@drawable/endingnya" />

</RelativeLayout>